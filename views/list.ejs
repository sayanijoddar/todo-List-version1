<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>To-Do List</title>

    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <!-- scriptlet tag use, only for control flow statements, not output -->
    <!--
        <% if(whichDay==="Saturday" || whichDay==="Sunday"){ %>
            <h1 style="color: rgb(255, 118, 191);"><%= whichDay %> To-Do List</h1>
        <% } else{ %>
            <h1 style="color: rgb(113, 113, 255);"><%= whichDay %> To-Do List</h1>
        <% } %>
    -->

    <div class="box" id="heading">
        <!-- ejs marker to render value of whichDay -->
        <h1>
            <%= whichDay %>
        </h1>
    </div>

    <div class="box">
        <% for(var i=0;i<newlyAddedItems.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newlyAddedItems[i] %>
                </p>
            </div>

            <% } %>

            <form action="/" method="post" class="box">
                <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
                <button type="submit">+</button>
            </form>
    </div>

</body>

</html>